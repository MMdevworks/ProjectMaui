<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProjectMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProjectMaui.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ProjectMaui">
    <!--order matters, first to load:-->
    <ShellContent Route="SplashPage" ContentTemplate="{DataTemplate local:SplashPage}"/>

    <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate local:LoginPage}"/>
    <ShellContent Route="MainPage" Title="Main" ContentTemplate="{DataTemplate local:MainPage}"/>
</Shell>
